<h1>Listing posts</h1>
<div class="row">
    <% @posts.each do |post| %>
        <div class="col-sm-6 col-md-4">
            <div class="thumbnail">
                <% if post.has_photo? %>
                    <%= image_tag post.photo_path %>
                <% end %>
                <div class="caption">
                    <h3><%= link_to post.title, post %></h3>
                    <p></p>
                </div>
            </div>
        </div>
    <% end %>
</div>
<%= link_to 'New Post', new_post_path %>
